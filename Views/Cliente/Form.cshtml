
@{
    ViewBag.Title = "Novo Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/bundles/validateCpf")
}

@model VendasMVC.ViewModel.ClienteFormViewModel

<h2>Novo Cliente</h2>
<form action=@Model.Acao method="post" onsubmit="return validateForm()">
    <div class="form-group">
        <label for="cpf">CPF</label>
        <input class="form-control mr-sm-2" type="text" name="cliente.Cpf" id="cpf" value="@Model.Cliente.Cpf" />
    </div>
    <div class="alert alert-danger invisible" role="alert" id="mensagemCpf"></div>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input class="form-control mr-sm-2" type="text" name="cliente.Nome" id="nome" value="@Model.Cliente.Nome" />
    </div>
    <input type="text" name="cliente.IdCliente" id="id" value=@Model.Cliente.IdCliente hidden />
    <div class="form-group">
        <input class="form-control" type="submit" value="Cadastrar" />
    </div>
</form>
<button type="button" class="btn btn-info m-2" onclick="location.href='@Url.Action("Index", "Home")'">Voltar</button>

