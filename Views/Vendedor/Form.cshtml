
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/bundles/validateCpf")
}

@model VendasMVC.ViewModel.VendedorFormViewModel

<h2>Form</h2>
<form action=@Model.Acao method="post" onsubmit="return validateForm()">
    <div class="form-group">
        <label for="cpf">CPF</label>
        <input class="form-control mr-sm-2" type="text" name="vendedor.Cpf" id="cpf" value="@Model.Vendedor.Cpf" />
    </div>
    <div class="alert alert-danger invisible" role="alert" id="mensagemCpf"></div>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input class="form-control mr-sm-2" type="text" name="vendedor.Nome" id="nome" value="@Model.Vendedor.Nome" />
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input class="form-control mr-sm-2" type="password" name="senha" id="senha" />
    </div>
    <div class="form-group">
        <label for="acesso">GrupoDeAcesso</label>
        <select class="form-control" id="acesso" name="vendedor.GrupoDeAcesso">
            <option value=1>Vendedor</option>
            <option value=2>Gerente</option>
        </select>
    </div>
    <input type="text" name="vendedor.IdVendedor" id="id" value=@Model.Vendedor.IdVendedor hidden />
    <div class="form-group">
        <input class="form-control" type="submit" value="Submit" />
    </div>
</form>
<button type="button" class="btn btn-info m-2" onclick="location.href='@Url.Action("Index", "Home")'">Voltar</button>

